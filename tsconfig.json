{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "__tests__/**/*", "src/*.json"],
  "exclude": ["src/lib/**/*", "src/lib/entities/*"]
}
